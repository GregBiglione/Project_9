<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AddHouseActivity"
    android:layout_margin="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_house_photo"
                android:contentDescription="@string/add_house_image"
                style="@style/add_house_image_style"
                android:layout_gravity="center_horizontal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_house_photo_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_of_house"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/add_house_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_type_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_description"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:maxLines="20"
                    style="@style/agent_first_name_style"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/neighborhood"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/add_house_neighborhood_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_neighborhood_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_address"
                    android:hint="@string/address"
                    android:inputType="text"
                    style="@style/agent_first_name_style"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_price_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_address_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_price"
                    android:hint="@string/price"
                    android:inputType="number"
                    style="@style/add_house_input_with_icon_style"
                    android:drawableStart="@drawable/ic_baseline_attach_money_24"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_surface_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_price_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_surface"
                    android:hint="@string/surface"
                    android:inputType="number"
                    style="@style/add_house_input_with_icon_style"
                    android:drawableStart="@drawable/ic_outline_crop_free_24"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_number_of_rooms_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_surface_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_number_of_rooms"
                    android:hint="@string/number_of_rooms"
                    android:inputType="number"
                    style="@style/add_house_input_with_icon_style"
                    android:drawableStart="@drawable/ic_baseline_home_24"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_number_of_bathrooms_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_number_of_rooms_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_number_of_bathrooms"
                    android:hint="@string/number_of_bathrooms"
                    android:inputType="number"
                    style="@style/add_house_input_with_icon_style"
                    android:drawableStart="@drawable/ic_baseline_bathtub_24"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_house_number_of_bedrooms_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/add_house_number_of_bathrooms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_house_number_of_bedrooms"
                    android:hint="@string/number_of_bedrooms"
                    android:inputType="number"
                    style="@style/add_house_input_with_icon_style"
                    android:drawableStart="@drawable/ic_baseline_king_bed_24"
                    android:nextFocusDown="@+id/agent_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_house_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/add_house_entry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/add_house_sale_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/add_house_ck_bx_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_of_interests"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/add_house_ck_bx_row1_lyt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_park"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/park"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_museum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/museum"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/restaurant"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bar"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_metro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metro"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_house_ck_bx_row2_lyt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_shops"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shops"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_sea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sea"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/school"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_hospital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hospital"/>

                        <CheckBox
                            android:id="@+id/add_house_ck_bx_swimming_pool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/swimming_pool"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Spinner
                android:id="@+id/add_house_agent_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/add_house_btn_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/add_house_add_button"
                    app:layout_constraintTop_toBottomOf="@id/agent_email_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/agent_delete_button"
                    android:hint="@string/add"
                    app:cornerRadius="20dp"
                    android:nextFocusDown="@+id/agent_delete_button"
                    style="@style/agent_item_btn_style"/>

                <Button
                    android:id="@+id/add_house_delete_button"
                    app:layout_constraintTop_toBottomOf="@id/agent_email_input"
                    app:layout_constraintStart_toStartOf="@id/agent_add_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="@string/clear"
                    android:textSize="18sp"
                    app:cornerRadius="20dp"
                    style="@style/agent_item_btn_style"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>