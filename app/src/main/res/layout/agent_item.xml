<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/agent_item_cardView"
    android:layout_margin="4dp"
    android:elevation="10dp">

    <RelativeLayout
        android:id="@+id/foods_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:layout_gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/agent_item_image"
            style="@style/agent_item_image_style"/>

        <TextView
            android:id="@+id/agent_item_first_name"
            android:text="@string/first_name"
            android:layout_toEndOf="@+id/agent_item_image"
            style="@style/agent_item_style"/>

        <TextView
            android:id="@+id/agent_item_name"
            android:text="@string/name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/agent_item_first_name"
            style="@style/agent_item_style"/>

        <TextView
            android:id="@+id/agent_item_phone"
            android:text="@string/phone"
            android:layout_toEndOf="@+id/agent_item_image"
            android:layout_below="@+id/agent_item_first_name"
            style="@style/agent_item_style"
            app:drawableStartCompat="@drawable/ic_baseline_phone_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/agent_item_email"
            android:text="@string/mail"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/agent_item_phone"
            android:layout_below="@+id/agent_item_first_name"
            style="@style/agent_item_style"
            app:drawableStartCompat="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>