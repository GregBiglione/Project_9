<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text input Edit Text hint color -->
    <style name="hint_color">
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="dialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--//////////////////////////////////// N Size /////////////////////////////////////////////-->

    <!-- Home Fragment -->
    <style name="image_style">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="house_linear_lyt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="type_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="neighborhood_style">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="price_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="house_hr_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Add Agent Fragment -->
    <style name="agent_photo_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="agent_first_name_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <!-- Add Agent item -->
    <style name="agent_item_image_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="agent_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="agent_item_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15sp</item>
    </style>

    <style name="agent_item_l_lyt_style">
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!-- Add house activity -->
    <style name="add_house_image_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="borderWidth">1dp</item>
        <item name="civ_border_color">@color/image_view_border_gray</item>
        <item name="android:src">@drawable/ic_baseline_add_a_photo_24</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="add_house_input_with_icon_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="add_house_photo_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15sp</item>
    </style>

    <!-- Add photo text view -->
    <style name="add_photo_image_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Detail house fragment -->
    <style name="detailed_house_title">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailed_house_text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="detailed_house_card_view">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Search house fragment -->
    <style name="search_hr_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/image_view_border_gray</item>
    </style>

    <style name="search_title">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_margin">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <!-- Credit simulator fragment -->
    <style name="credit_simulator_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--//////////////////////////////////// N Land Size ////////////////////////////////////////-->

    <style name="neighborhood_style_N_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--//////////////////////////////////// S Size /////////////////////////////////////////////-->

    <!-- Credit simulator fragment -->
    <style name="credit_simulator_title_S">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Home Fragment -->
    <style name="neighborhood_style_S">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="neighborhood_style_S_land">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Search house fragment -->
    <style name="search_title_S">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Add Agent item -->
    <style name="agent_item_image_style_S">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="agent_item_style_S">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--//////////////////////////////////// XL Size ////////////////////////////////////////////-->
    <style name="neighborhood_style_XL">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
